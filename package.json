{
  "name": "ftr-app",
  "version": "1.0.0",
  "description": "FTR App - Backup important documents in your cloud with context",
  "main": "index.js",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "build:ts": "tsc",
    "build:next": "next build",
    "cz": "git-cz",
    "dev": "concurrently \"tsc --watch\" next",
    "fmt": "yarn prettier --write server.ts 'pages/**/*.ts{x}' 'components/**/*.ts{x}'",
    "start": "ts-node server.ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "maxSubjectLength": 120
    }
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "singleQuote": true,
    "trailingComma": "all",
    "parser": "typescript"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn fmt",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vire/ftr-app.git"
  },
  "keywords": [],
  "author": "Viliam Elischer <code.vire@gmail.com> (https://github.com/vire)",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/vire/ftr-app/issues"
  },
  "homepage": "https://github.com/vire/ftr-app#readme",
  "dependencies": {
    "express": "4.16.2",
    "next": "4.1.4",
    "react": "16.1.0",
    "react-dom": "16.1.0",
    "ts-node": "3.3.0",
    "typescript": "2.6.1"
  },
  "devDependencies": {
    "@types/express": "4.0.39",
    "@types/next": "2.4.5",
    "@types/node": "8.0.51",
    "@types/prop-types": "15.5.2",
    "@types/react": "16.0.22",
    "commitizen": "2.9.6",
    "concurrently": "3.5.0",
    "cz-conventional-changelog": "2.1.0",
    "husky": "0.14.3",
    "prettier": "1.8.2",
    "tslint": "5.8.0",
    "tslint-config-prettier": "1.6.0",
    "tslint-config-standard": "7.0.0",
    "tslint-react": "3.2.0",
    "validate-commit-message": "3.0.1"
  }
}
